<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_back_grey"
    android:orientation="vertical"
    tools:context=".Fragment.AccountFragment">

    <TextView
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Thông tin tài khoản" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="10dp"
        android:background="@drawable/round_back_item_account_avt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avt_account"/>

        <TextView
            android:id="@+id/tvAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="10dp"
        android:background="@drawable/round_back_item_account"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_key"
        android:drawableRight="@drawable/ic_next"
        android:text="  Thay đổi mật khẩu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_back_logout"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Đăng xuất" />
</LinearLayout>