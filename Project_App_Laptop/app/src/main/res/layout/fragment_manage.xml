<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_back_grey"
    android:orientation="vertical"
    tools:context=".Fragment.ManageFragment" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Danh mục"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_product_yellow" />

            <TextView
                android:id="@+id/id4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Sản phẩm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDonHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_order_yellow" />

            <TextView
                android:id="@+id/id6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Đơn hàng" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnKhachHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_customer_yellow" />
            <TextView
                android:id="@+id/id8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Khách hàng" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_employee_green" />

            <TextView
                android:id="@+id/id12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Nhân viên" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBaoCao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report_green" />

            <TextView
                android:id="@+id/id10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Báo cáo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_back_item_category"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_brand" />

            <TextView
                android:id="@+id/id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Hãng" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
